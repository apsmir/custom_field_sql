<p>
  <%= f.text_area :sql, :value => @custom_field.sql, :rows => 15 %>
</p>
<% if @custom_field.field_format == "sql_search"  %>
  <p>
    <%= f.text_area :form_params, :value => @custom_field.form_params, :rows => 10 %>
  </p>
  <p>
    <%= f.text_field :db_config  %>
  </p>
  <p>
    <%= f.check_box :search_by_click %>
  </p>
  <p>
    <%= f.check_box :strict_selection %>
  </p>
  <p>
    <%= f.text_field :strict_error_message, :size => 50 %>
  </p>
  <p>
    <%= f.text_area :default_value, :size => 50 %>
  </p>
  <p><%= f.text_field :url_pattern, :size => 50, :label => :label_link_values_to %></p>
<% end %>
